program lenght1;
uses crt;
const N=10;
type tab=ARRAY[1..N] OF INTEGER;
var t:tab;
    e,d,i,s,p:integer;

begin
clrscr;
i:=1;
writeln('entrez les 10 valeurs entiäres');
while i<=N do
begin
     repeat
     readln(t[i]);


     until(t[i]>=0);
     i:=i+1;
end;
i:=1;p:=1;
while i<N do
begin
s:=1; d:=i;
while t[i]<=t[i+1]  do
begin
   s:=s+1;
   i:=i+1;
end;
if s>=p then
begin
p:=s;
e:=d;
end;
i:=i+1;
end;
writeln('la longueur de la chaine la plus longue est:',p,'et le rang du premier terme est:',e);
readln;
end.
